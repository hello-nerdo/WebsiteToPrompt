{
  "name": "WebsiteToPrompt",
  "description": "Select web elements and generate an XML prompt snippet",
  "version": "1.0.0",
  "manifest_version": 3,

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.jpg",
      "48": "icons/icon.jpg",
      "128": "icons/icon.jpg"
    }
  },
  "icons": {
    "16": "icons/icon.jpg",
    "48": "icons/icon.jpg",
    "128": "icons/icon.jpg"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
